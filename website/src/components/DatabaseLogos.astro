---
const base = import.meta.env.BASE_URL;

const primaryDatabases = [
  { name: 'PostgreSQL', logo: `${base}/logos/postgresql.svg` },
  { name: 'MySQL', logo: `${base}/logos/mysql.svg` },
  { name: 'MariaDB', logo: `${base}/logos/mariadb.svg` },
  { name: 'MongoDB', logo: `${base}/logos/mongodb.svg` },
  { name: 'SQLite', logo: `${base}/logos/sqlite.svg` },
  { name: 'SQL Server', logo: `${base}/logos/mssql.svg` },
  { name: 'Oracle', logo: `${base}/logos/oracle.svg` },
  { name: 'CockroachDB', logo: `${base}/logos/cockroachdb.svg` },
];

const cloudDatabases = [
  { name: 'AWS Aurora', logo: `${base}/logos/aws-aurora.svg` },
  { name: 'Google Cloud SQL', logo: `${base}/logos/google-cloud-sql.svg` },
  { name: 'YugabyteDB', logo: `${base}/logos/yugabytedb.svg` },
];
---

<section class="py-16 border-t border-white/10">
  <div class="container-wide">
    <p class="text-center text-gj-muted text-sm uppercase tracking-wider mb-10">
      Works with your database
    </p>

    {/* Primary databases row */}
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 mb-8">
      {primaryDatabases.map((db) => (
        <div
          class="group relative flex flex-col items-center gap-2"
          title={db.name}
        >
          <div class="w-12 h-12 md:w-14 md:h-14 flex items-center justify-center opacity-70 hover:opacity-100 transition-opacity duration-300">
            <img
              src={db.logo}
              alt={db.name}
              class="w-full h-full object-contain"
              loading="lazy"
            />
          </div>
          <span class="text-xs text-gj-muted opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap">
            {db.name}
          </span>
        </div>
      ))}
    </div>

    {/* Cloud databases row */}
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
      {cloudDatabases.map((db) => (
        <div
          class="group relative flex flex-col items-center gap-2"
          title={db.name}
        >
          <div class="w-10 h-10 md:w-12 md:h-12 flex items-center justify-center opacity-60 hover:opacity-100 transition-opacity duration-300">
            <img
              src={db.logo}
              alt={db.name}
              class="w-full h-full object-contain"
              loading="lazy"
            />
          </div>
          <span class="text-xs text-gj-muted opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap">
            {db.name}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
